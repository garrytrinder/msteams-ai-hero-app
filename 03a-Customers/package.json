{
    "name": "msteams-ai-hero-app",
    "version": "1.0.0",
    "description": "Microsoft Teams Toolkit hello world Bot sample",
    "engines": {
        "node": "16 || 18"
    },
    "author": "Microsoft",
    "license": "MIT",
    "main": "./lib/server.js",
    "targets": {
        "main": false
    },
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "scripts": {
        "build": "npm run clean && npm run build:tsc && npm run build:parcel",
        "build:parcel": "parcel build ./app/pages/**/*.html --dist-dir ./lib/app/pages",
        "build:tsc": "tsc --build",
        "clean": "rimraf ./lib && rimraf ./dist && rimraf ./.parcel-cache",
        "dev": "nodemon --exec node --ignore _storage_emulator/ --inspect=9239 --signal SIGINT -r ts-node/register ./server.ts",
        "dev:parcel": "parcel watch ./app/pages/**/*.html --dist-dir ./dist",
        "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
        "storage": "azurite --silent --location ./_storage_emulator --debug ./_storage_emulator/debug.log",
        "watch": "nodemon --exec \"npm run start\"",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node ./lib/server.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com"
    },
    "dependencies": {
        "@azure/data-tables": "^13.2.2",
        "@azure/msal-node": "2.0.2",
        "@microsoft/adaptivecards-tools": "1.3.2",
        "@microsoft/teams-ai": "0.1.0-preview.2",
        "@microsoft/teams-js": "2.14.0",
        "@microsoft/teamsfx": "2.2.2",
        "botbuilder": "4.20.0",
        "botbuilder-azure-blobs": "4.20.0",
        "restify": "11.1.0"
    },
    "devDependencies": {
        "@microsoft/microsoft-graph-types": "2.38.0",
        "@types/node": "18.17.14",
        "@types/restify": "8.5.7",
        "azurite": "3.26.0",
        "env-cmd": "10.1.0",
        "nodemon": "3.0.1",
        "parcel": "2.9.3",
        "rimraf": "5.0.1",
        "shx": "0.3.4",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    }
}
