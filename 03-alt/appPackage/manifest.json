{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "msteams-ai-hero-app-${{TEAMSFX_ENV}}",
        "full": "full name for msteams-ai-hero-app"
    },
    "description": {
        "short": "short description for msteams-ai-hero-app",
        "full": "full description for msteams-ai-hero-app"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "groupChat",
                "team"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": []
        }
    ],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "commands": [
                {
                    "id": "movieQuery",
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "description": "Look up a movie",
                    "title": "Movie search",
                    "type": "query",
                    "parameters": [
                        {
                            "name": "queryText",
                            "title": "Movie search",
                            "description": "Look up a movie",
                            "inputType": "text"
                        }
                    ]
                }
            ]
        }
    ],
    "configurableTabs": [
        {
            "configurationUrl": "https://${{BOT_DOMAIN}}/config.html",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ],
            "context": [
                "callingSidePanel",
                "channelTab",
                "meetingChatTab",
                "meetingDetailsTab",
                "meetingSidePanel",
                "meetingStage",
                "personalTab",
                "privateChatTab"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "staticTab",
            "name": "Static Tab",
            "contentUrl": "https://${{BOT_DOMAIN}}/static.html",
            "scopes": [
                "personal",
                "groupChat",
                "team"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{BOT_DOMAIN}}"
    ]
}