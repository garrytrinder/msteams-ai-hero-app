{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.appcamp.v3",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "Northwind-Logo3-192.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Northwind Customers ${{TEAMSFX_ENV}}",
        "full": "Northwind customer management app"
    },
    "description": {
        "short": "Manage and collaborate to help our valued customers",
        "full": "This app helps you collaborate with your team to manage our valued customers"
    },
    "accentColor": "#3690E9",
    "bots": [
        {
            "botId": "${{AAD_APP_CLIENT_ID}}",
            "scopes": [
                "personal",
                "groupChat",
                "team"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": []
        }
    ],
    "composeExtensions": [
        {
            "botId": "${{AAD_APP_CLIENT_ID}}",
            "commands": [
                {
                    "id": "personQuery",
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "description": "Look up a person",
                    "title": "Person search",
                    "type": "query",
                    "parameters": [
                        {
                            "name": "queryText",
                            "title": "Person search",
                            "description": "Lookup a person",
                            "inputType": "text"
                        }
                    ]
                }
            ]
        }
    ],
    "configurableTabs": [
        {
            "configurationUrl": "https://${{APP_DOMAIN}}/config.html",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ],
            "context": [
                "callingSidePanel",
                "channelTab",
                "meetingChatTab",
                "meetingDetailsTab",
                "meetingSidePanel",
                "meetingStage",
                "personalTab",
                "privateChatTab"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "staticTab",
            "name": "Static Tab",
            "contentUrl": "https://${{APP_DOMAIN}}/static.html",
            "scopes": [
                "personal",
                "groupChat",
                "team"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{APP_DOMAIN}}"
    ],
    "webApplicationInfo": {
        "id": "${{AAD_APP_CLIENT_ID}}",
        "resource": "api://${{APP_DOMAIN}}/botid-${{AAD_APP_CLIENT_ID}}"
      }
}