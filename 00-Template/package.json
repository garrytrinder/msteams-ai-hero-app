{
    "name": "msteams-ai-hero-app",
    "version": "1.0.0",
    "description": "Microsoft Teams Toolkit hello world Bot sample",
    "engines": {
        "node": "16 || 18"
    },
    "author": "Microsoft",
    "license": "MIT",
    "main": "./lib/server.js",
    "scripts": {
        "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
        "dev": "nodemon --exec node --ignore _storage_emulator/ --inspect=9239 --signal SIGINT -r ts-node/register ./server.ts",
        "build": "tsc --build && cd app/pages && npm run build && cd ../../scripts && node copy.js",
        "start": "node ./lib/server.js",
        "storage": "azurite --silent --location ./_storage_emulator --debug ./_storage_emulator/debug.log",
        "watch": "nodemon --exec \"npm run start\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com"
    },
    "dependencies": {
        "@microsoft/adaptivecards-tools": "^1.0.0",
        "@microsoft/teams-ai": "^0.1.0-preview.2",
        "@microsoft/teamsfx": "^2.2.2",
        "botbuilder": "^4.17.0",
        "botbuilder-azure-blobs": "^4.20.0",
        "msal-node": "^0.0.1-security",
        "restify": "^10.0.0"
    },
    "devDependencies": {
        "@microsoft/microsoft-graph-types": "^2.38.0",
        "@types/node": "^14.0.0",
        "@types/restify": "^8.5.5",
        "azurite": "^3.25.1",
        "env-cmd": "^10.1.0",
        "nodemon": "^2.0.7",
        "shx": "^0.3.3",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
